{
    "name": "MenuTube",
    "version": "1.6.0",
    "description": "Catch YouTube into your macOS menu bar!",
    "main": "main.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "electron-packager ./ --platform=darwin --icon='./icons/logo-icon.icns' --out='./builds' --ignore='docs' --overwrite",
        "start": "DEBUG=true electron .",
        "dev": "npm start && npm run --debug",
        "dist": "electron-builder",
        "dist:debug": "DEBUG=electron-builder electron-builder --dir"
    },
    "build": {
        "productName": "MenuTube",
        "appId": "com.rednuclearmonkey.menutube",
        "icon": "./icons/logo-icon.icns",
        "mac": {
            "target": [
                "mas",
                "dmg"
            ],
            "gatekeeperAssess": false,
            "asarUnpack": [],
            "type": "distribution",
            "hardenedRuntime": false
        },
        "mas": {
            "identity": "Red Nuclear Monkey Oy (6N2WC87M54)",
            "provisioningProfile": "./entitlements/embeddedprovisionprofile.provisionprofile",
            "entitlements": "./entitlements/parent.plist",
            "entitlementsInherit": "./entitlements/child.plist"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Red-Nuclear-Monkey/menutube.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Red-Nuclear-Monkey/menutube/issues"
    },
    "homepage": "https://github.com/Red-Nuclear-Monkey/menutube#readme",
    "dependencies": {
        "@exponent/electron-cookies": "^2.0.0",
        "bulma": "^0.3.2",
        "electron-config": "^0.2.1",
        "font-awesome": "^4.7.0",
        "menubar": "^8.0.1"
    },
    "devDependencies": {
        "electron": "^8.2.1",
        "electron-builder": "^22.4.1",
        "electron-packager": "^14.2.1",
        "jshint": "^2.9.5"
    }
}
